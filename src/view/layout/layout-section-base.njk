<section class="section layout__section {{ inject.sectionClass }}">
    <div class="section__inner {{ inject.sectionInner }}">
        <div class="layout__{{ inject.wrapper }} layout__wrap {{ layoutClass }}">
            <div class="layout__box">
                {% if inject.sectionTitle %}
                    <div class="section__title title title_view_primary title_size_xl">
                        <div class="title__text">{{ inject.sectionTitle }}</div>
                    </div>
                {% endif %}
                {% block section %}
                {% endblock section %}
                {% if inject.deco %}
                    <div class="section__deco">
                        <img src="/img/icons/icon__flower.svg" alt="" class="deco__pattern img" />
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>
