<div class="payment">
    <div class="payment__inner">
        <div class="payment__titlebox">
            <span class="payment__title title title_size_xl title_view_secondary">
                <span class="title__text">Маленькі кроки ведуть нас до великої ПЕРЕМОГИ!</span>
            </span>
        </div>
        <div class="payment__textbox">
            <div class="payment__text">Кожна гривня для нас дуже важлива, тому зробити свій внесок ви можете саме зараз</div>
        </div>
        <div class="payment__list">
            {% for item in params.payment_list %}
                {% if item.name === 'crypto' %}
                    <div class="payment__item payment__item_{{ item.name }} payment-item box">
                        <div class="payment-item__inner box__inner">
                            <div class="payment-item__box">
                                {% for subitem in item.data %}
                                    <div class="payment-item__row-grid">
                                        <div class="payment-item__iconbox payment-item__iconbox_in_list">
                                            <div class="payment-item__icon icon icon_{{ subitem.icon }} "></div>
                                        </div>
                                        <div class="payment-item__title">{{ subitem.title }}</div>
                                        <div class="payment-item__value">{{ subitem.value }}</div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="payment__item payment__item_{{ item.name }} payment-item box">
                        <div class="payment-item__inner box__inner">
                            <div class="payment-item__iconbox">
                                <div class="payment-item__icon icon icon_{{ item.icon }}"></div>
                            </div>
                            <div class="payment-item__box">
                                {% for subitem in item.data %}
                                    <div class="payment-item__row">
                                        <div class="payment-item__title">{{ subitem.title }}</div>
                                        <div class="payment-item__value">{{ subitem.value }}</div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>
