<div class="footer__cell footer-item">
    <div class="footer-item__inner">
        <div class="footer-item__titlebox">
            <div class="footer-item__title">Контакти</div>
        </div>
        <div class="footer-item__body">
            <nav class="footer-item__short-box">
                {% for item in params.contact_list %}
                    {% if item.name === 'phone' %}
                        <div class="footer-item__short-item">
                            <div class="footer-item__short-iconbox">
                                <div class="footer-item__short-icon icon icon_phone"></div>
                            </div>
                            <div class="footer-item__short-list">
                                {% for phone in item.data.body %}<div class="footer-item__short-item-text">{{ phone }}</div>{% endfor %}
                            </div>
                        </div>
                    {% endif %}
                    {% if item.name === 'address' %}
                        <div class="footer-item__short-item">
                            <div class="footer-item__short-iconbox">
                                <div class="footer-item__short-icon icon icon_mark"></div>
                            </div>
                            <div class="footer-item__short-list">
                                <div class="footer-item__short-item-text">
                                    м. {{ item.data.body.city }},
                                    вул.{{ item.data.body.street }},
                                    буд. {{ item.data.body.build }},
                                    оф. {{ item.data.body.room }}
                                </div>
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </nav>
        </div>
    </div>
</div>
